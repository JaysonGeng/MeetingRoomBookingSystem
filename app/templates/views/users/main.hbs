<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">用户管理</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button class="btn btn-sm btn-outline-secondary" onclick="window.location='/users/add'">
          <span data-feather="plus-circle"></span>
          添加用户
        </button>
    </div>
</div>

<div class="my-3 p-3 bg-white rounded box-shadow">
    {{#each users}}
        <div id="row_{{id}}" class="media text-muted pt-3">
            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">{{name}} ({{role}}) <span class="badge badge-success">已激活</span></strong>
            {{email}}
            </p>
            {{#ifCond ../session.userAccount.role_id '==' 1}}
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example" style="position:absolute;right:35px">
                    <button type="button" class="btn btn-secondary" onclick="window.location='/users/view?id={{id}}'"><span data-feather="info"></span></button>
                    <button type="button" class="btn btn-secondary" onclick="window.location='/users/edit?id={{id}}'"><span data-feather="edit"></span></button>
                    <button type="button" class="btn btn-secondary" onclick="deleteprompt({{id}})" {{#ifCond id '==' ../session.userAccount.ID}}disabled{{/ifCond}}><span data-feather="trash"></span></button>
                </div>
            {{/ifCond}}
        </div>
    {{/each}}
</div>


<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">确定？</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>您确定要删除此用户吗?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <button id="btnDelete" type="button" class="btn btn-danger">确定</button>
      </div>
    </div>
  </div>
</div>


<script>
    function deleteprompt(id)
    {
        var mdl = $('#deleteModal');
        var btn = $('#btnDelete');

        if($(this).prop('disabled'))
            return;

        $(btn).unbind('click').click(function()
        {
            DeleteUser(id);
        });

        console.log('Opening Modal');
        $(mdl).modal('show');

    }

    function DeleteUser(id)
    {
        var mdl = $('#deleteModal');

        showLoader(mdl);
        $.post('/users/delete',{userid:id},
        function(data)
        {
            hideLoader(mdl);
            if(data.success === true)
            {
                $(mdl).modal('hide');
                $('#row_'+id).fadeOut(function()
                {
                    $(this).remove();
                });
                return;
            }
            alert(data.message);
        },'JSON').fail(function(ex)
        {
            hideLoader(mdl);
            console.error(ex);
            alert('An error occurred on server, please try again later.')
        });
    }
</script>
